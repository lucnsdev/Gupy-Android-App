<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- DISABLED STATE -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/item_disabled" />
            <corners android:radius="@dimen/margin_4" />
        </shape>
    </item>

    <!-- NORMAL STATE -->

    <item>
        <ripple android:color="@android:color/white">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/margin_4" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/button_gradient_end" android:startColor="@color/button_gradient_start" />
                    <corners android:radius="@dimen/margin_4" />
                </shape>
            </item>
            <item android:shape="rectangle" android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/button_gradient_end_2" android:startColor="@color/button_gradient_start_2" />
                    <corners android:radius="@dimen/margin_4" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
