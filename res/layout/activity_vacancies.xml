<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_3"
    android:paddingTop="@dimen/margin_4"
    android:paddingRight="@dimen/margin_3">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/fab2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/margin_4"
        android:background="@drawable/fab_white"
        android:layout_marginTop="@dimen/margin_4"
        android:elevation="4dp" />

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_4"
        android:background="@drawable/fab_white"
        android:layout_marginTop="@dimen/margin_4"
        android:elevation="4dp" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageLogo"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/counter_zero"
            android:textColor="@color/text_secondary" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_below="@+id/textStatus"
            android:layout_marginTop="@dimen/margin"
            android:layout_height="1dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/progress_bar_background"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/textCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/text_secondary" />

        <lucns.gupy.views.slider.SliderView
            android:id="@+id/sliderView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textLastUpdate"
            android:layout_below="@+id/textCounter"
            android:layout_marginTop="@dimen/margin_3"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginBottom="@dimen/margin_3"
            android:text="@string/app_name"
            android:textColor="@color/accent" />
    </RelativeLayout>
</RelativeLayout>